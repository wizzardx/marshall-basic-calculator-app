{
  "name": "marshall-basic-calculator-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "NODE_OPTIONS='--no-warnings=ExperimentalWarning' vitest run",
    "test:e2e": "playwright test",
    "lint": "tsc --noEmit && eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "eslint . --ext .ts,.tsx --fix && prettier --write .",
    "check": "pnpm run lint && pnpm run test && pnpm run test:e2e && pnpm run security && pnpm run build && echo 'All checks passed successfully!'",
    "dev:tdd": "vitest",
    "test:e2e:tdd": "playwright test --ui",
    "update": "pnpm update",
    "outdated": "pnpm outdated",
    "security": "pnpm audit"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.1",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^8.57.1",
    "gh-pages": "^5.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.6.2",
    "vite": "^5.4.6",
    "vitest": "^2.1.1"
  },
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1"
}
